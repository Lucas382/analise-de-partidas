#:import hex kivy.utils.get_color_from_hex
#:import SlideTransition kivy.uix.screenmanager.SlideTransition

<ViewScreenManager>
    transition: SlideTransition()
    MainMenu:
        name: 'main_menu'
    NewGame:
        name: 'new_game'

<MainMenu>:
    config: config
    BoxLayout:
        orientation: 'vertical'
        ToolBar:
            size_hint_y:None
            size: root.width, "40dp"


        BoxLayout:
            orientation: 'vertical'
            padding: root.width*0.25, root.height*0.3
            spacing: "20dp"
            canvas.before:
                Color:
                    rgba: hex("#404040")
                Rectangle:
                    pos: self.pos
                    size: self.size

            MenuButton:
                text: 'Novo jogo'
                size_hint_y: None
                height: "40dp"
                color: hex('#202020')
                on_release:
                    root.manager.transition.direction = 'left'
                    app.root.current = 'new_game'

            MenuButton:
                text: 'Editar Times'
                size_hint_y: None
                height: "40dp"
                color: hex('#202020')
                on_release:
                    root.manager.transition.direction = 'left'
                    app.root.current = 'new_game'

            MenuButton:
                text: 'Editar Jogos'
                size_hint_y: None
                height: "40dp"
                color: hex('#202020')
                on_release:
                    root.manager.transition.direction = 'left'
                    app.root.current = 'new_game'

            MenuButton:
                id:config
                text: 'Configurações'
                size_hint_y: None
                height: "40dp"
                color: hex('#202020')
                on_release:
                    root.clicou()


<ToolBar@AnchorLayout>:
    box:box
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        canvas.before:
            Color:
                rgba: hex("#383838")
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            size_hint_x:None
            spacing: "2dp"
            canvas.before:
                Color:
                    rgba: hex("#383838")
                Rectangle:
                    pos: self.pos
                    size: self.size
            MenuButton:
                text: '-'
                size_hint_y: None
                size_hint_x:None
                size: 50,60
                height: "40dp"
                color: hex('#383838')
                on_release:
                    app.root.transition = SlideTransition(direction='left')
                    app.root.current = 'new_game'

            MenuButton:
                text: 'x'
                size_hint_y: None
                size_hint_x:None
                size: 50,40
                height: "40dp"
                color: hex('#383838')
                on_release:
                    app.stop()


        RelativeLayout:
            size_hint_x:None
            size: root.width-55, 40
            canvas.before:
                Color:
                    rgba: hex("#383838")
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                id:box



        RelativeLayout:
            size_hint_x:None
            size: root.width, 40
            canvas.before:
                Color:
                    rgba: hex("#383838")
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                MenuButton:
                    id:cfg
                    text: 'Cfg'
                    size_hint_y: None
                    size_hint_x:None
                    size: 50,40
                    height: "40dp"
                    color: hex('#202020')
                    on_release:
                        root.clicou()

<NewGame>:
    BoxLayout:
        orientation: 'vertical'

        ToolBar:
            size_hint_y:None
            size: root.width, "40dp"
        BoxLayout:
            orientation: 'vertical'
            padding: root.width*0.25, root.height*0.3
            spacing: "20dp"
            canvas.before:
                Color:
                    rgba: hex("#404040")
                Rectangle:
                    pos: self.pos
                    size: self.size



        BoxLayout:
            orientation: 'vertical'
            padding: root.width*0.25, root.height*0.1
            spacing: "20dp"
            canvas.before:
                Color:
                    rgba: hex("#404040")
                Rectangle:
                    pos: self.pos
                    size: self.size


